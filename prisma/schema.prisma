// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DEVELOPMENT_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  firstName    String
  lastName     String
  image        String   @default("https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQB0a9Vv--jOowQtVo_DNHzY7CvSizocuT8pA&usqp=CAU")
  email        String   @unique
  password     String
  phone        String?
  role         String   @default("student")
  isBlocked    Boolean  @default(false)
  registeredAt DateTime @default(now())
  updatedAt    DateTime @updatedAt
  //TODO:  enrolledCourses Course[] (enrolled courses should be listed here)
}
